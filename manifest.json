{
    "name": "SlataHack",
    "description": "Reworked",
    "version": "1.1",
    "manifest_version": 3,
    "action": {
      "default_popup": "src/slata.html",
      "default_icon": "src/assets/slata_icon.png"
    },
    "permissions": [
        "tabs",
        "storage",
        "scripting",
        "activeTab",
        "cookies",
        "webRequest"
    ],
    "host_permissions": [
        "*://game.slata.com/*"
    ],
    "background": {
        "service_worker": "src/scripts/background.js",
        "type": "module"
    }
}